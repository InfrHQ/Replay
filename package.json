{
    "name": "replay",
    "productName": "Replay",
    "description": "Replay is a web application built that allows you to view your screen history & search through it! It's like a time machine for your everything you've ever seen.",
    "homepage": "https://meetreplay.com",
    "version": "0.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/InfrHQ/Replay"
    },
    "author": {
        "name": "Infr"
    },
    "license": "Apache-2.0",
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint 'app/**/*.{js,jsx,ts,tsx}'",
        "format:check": "prettier --check 'app/**/*.{js,jsx,ts,tsx,css,md,json,html}'",
        "format": "prettier --write 'app/**/*.{js,jsx,ts,tsx,css,md,json,html}'"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write",
            "git add"
        ],
        "src/**/*.{html,css,md,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "dependencies": {
        "autoprefixer": "10.4.15",
        "next": "13.4.16",
        "postcss": "8.4.28",
        "react": "18.2.0",
        "react-datepicker": "^4.18.0",
        "react-dom": "18.2.0",
        "tailwindcss": "3.3.3"
    },
    "devDependencies": {
        "babel-eslint": "^10.1.0",
        "eslint": "^8.47.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.28.0",
        "eslint-plugin-react": "^7.33.2",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.0",
        "prettier": "^3.0.2"
    }
}
